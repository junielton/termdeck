{
  "extends": "./tsconfig.shared.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "target": "ES2022",
    "types": ["node", "electron"],
    "moduleResolution": "Node",
    "allowJs": true
  },
  "include": ["src/main/**/*.ts", "src/main/**/*.js", "src/types/**/*.ts", "src/utils/**/*.ts"]
}
